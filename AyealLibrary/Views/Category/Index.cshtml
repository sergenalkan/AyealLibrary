@using AyealLibrary.Models.Entity
@model List<TblCategories>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2>

<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var ctg in Model)
    {
    <tr>
        <td>@ctg.Id</td>
        <td>@ctg.Name</td>
        <td><a href="/Category/CategoryDelete/@ctg.Id" class="btn btn-danger">Sil</a></td>
        <td><a href="/Category/CategoryGet/@ctg.Id" class="btn btn-success">Güncelle</a></td>
    </tr>
    }
</table>
<a href="/Category/CategoryAdd/" class="btn btn-primary">Yeni Kategori Ekle</a>