
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/fontawesome/fontawesome-free-6.5.1-web/css/fontawesome.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: #b6ff00;
                }

        .main {
            margin-left: 240px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="#home"><i class="fa fa-fw fa-home"></i>&nbsp; Ana Sayfa</a>
        <a href="/Category/Index/"><i class="fa fa-fw fa-list"></i> Kategoriler</a>
        <a href="#clients"><i class="fa fa-fw fa-book"></i> Kitaplar</a>
        <a href="#contact"><i class="fa fa-fw fa-pencil"></i> Yazarlar</a>
        <a href="#contact"><i class="fa fa-fw fa-user"></i> Üyeler</a>
        <a href="#contact"><i class="fa fa-fw fa-person"></i> Personeller</a>
        <a href="#contact"><i class="fa fa-fw fa-circle-arrow-right"></i> Ödünç Kitap Ver</a>
        <a href="#contact"><i class="fa fa-fw fa-circle-arrow-left"></i> Ödünç Kitap Al</a>
        <a href="#contact"><i class="fa fa-fw fa-cash-register"></i> Kasa</a>
        <a href="#contact"><i class="fa fa-fw fa-dashboard"></i> Hareketler</a>
        <a href="#contact"><i class="fa fa-fw fa-cog"></i> Ayarlar</a>
        <a href="#contact"><i class="fa fa-fw fa-info"></i> Yardım</a>
        <a href="#contact"><i class="fa fa-fw fa-remove"></i>Çıkış</a>
   </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>
